        <attr name="toolbar_title" format="string" />
        <attr name="toolbar_navigationIcon" format="reference|color" />
        <attr name="toolbar_menu" format="reference" />
        <attr name="toolbar_titleColor" format="color" />
        <attr name="toolbar_navigationIconColor" format="color" />
